DB_HOST=localhost
DB_NAME=financial_rag
DB_USER=postgres
# Do NOT commit secrets. Fill at runtime or via CI secrets.
DB_PASSWORD=your_db_password_here
DB_PORT=5432
DB_SSLMODE=prefer

API_PORT=8081

# Embedding Model Configuration
EMBEDDING_MODEL=philschmid/bge-base-financial-matryoshka
EMBEDDING_DIMENSION=768

# LLM Configuration (choose provider and set the corresponding key)
LLM_PROVIDER=gemini  # or "openai"
LLAMAINDEX_LLM_MODEL=models/gemini-1.5-flash
GOOGLE_API_KEY=your_gemini_api_key_here  # required if LLM_PROVIDER=gemini
OPENAI_API_KEY=your_openai_api_key_here  # required if LLM_PROVIDER=openai

# Optional tools
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# LlamaIndex Optimization
LLAMAINDEX_CHUNK_SIZE=1024
LLAMAINDEX_CHUNK_OVERLAP=128
LLAMAINDEX_LLM_TEMPERATURE=0.3
HYDE_ENABLED=true